<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/smallTrophy"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/trophy2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvDayTrophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/smallTrophy"
        app:layout_constraintLeft_toLeftOf="@id/smallTrophy"
        app:layout_constraintRight_toRightOf="@id/smallTrophy"
        app:layout_constraintTop_toTopOf="@id/smallTrophy"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/tvRecyclerQuote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/smallTrophy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="text goes here"/>

</android.support.constraint.ConstraintLayout>